---
import { shareLinks, createShareUrl } from '~/utils/share';
import Button from '~/components/ui/Button.astro';

interface Props {
  class?: string,
  description?: string,
  display: string[],
  title: string,
  url: string
};

const { display = ['email', 'facebook', 'linkedin', 'whatsapp'], description, title, url, class: className, ...rest }: Props = Astro.props;
---

<div class:list={['flex justify-between items-center gap-2', className]} {...rest} >
   { description && (
    <span class="font-medium mr-2">{description}</span>
   )}

  <div class="flex gap-1">
    {(
      shareLinks
      .filter(link => display.includes(link.name))
      .map((link) =>
        <Button
          buttonStyle="icon"
          icon={link.icon}
          iconSize={21}
          href={createShareUrl(link.name, title, url)}
          ariaLabel={link.label}
          openNewTab={true}
        />
      )
    )}
  </div>
</div>
