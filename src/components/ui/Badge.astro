---
import { Icon } from 'astro-icon/components';
import { tagStyles } from '~/utils/collections';

const { label } = Astro.props as { label: string };

const { color, icon } = tagStyles[label.toLowerCase()] ?? { color: 'bg-gray-300 text-black', icon: undefined };
---

<span class:list={['flex items-center gap-1 px-2 py-1 rounded-md transition duration-300', color]} aria-label="category">
  {icon && <Icon name={icon} width={12} height={12} />}
  <span class="text-sm font-medium">{label.toLowerCase()}</span>
</span>
