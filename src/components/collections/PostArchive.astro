---
import type { HTMLAttributes } from 'astro/types';
import type { DefaultTypes } from '~/types';

interface Props extends DefaultTypes, HTMLAttributes<'section'> {
};

const { description, heading, class: className, ...rest }: Partial<Props> = Astro.props;
---

<section class:list={['flex flex-col py-4 md:p-4', className]} {...rest} >

  { (heading || description) && (
    <header class:list={['flex flex-col justify-center max-w-[80ch]', (heading && description) ? 'gap-2' : '']}>
      { heading && (
        <h2 class="text-2xl md:text-3xl font-serif font-semibold">{heading}</h2>
      )}
      { description && (
        <p>{description}</p>
      )}
    </header>
  )}

  {/*  TODO: encompass cards from archive pages  */}

</section>
