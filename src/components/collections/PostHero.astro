---
import type { HTMLAttributes } from 'astro/types';
import type { DefaultTypes } from '~/types';
import { Picture } from 'astro:assets';

interface Props extends DefaultTypes, HTMLAttributes<'section'> {
};

const { description, heading, image, class: className, ...rest }: Partial<Props> = Astro.props;
---

<header class:list={[className]} {...rest} >

  <div class="-z-1 absolute left-0 md:top-0">
    <Picture
      src={image.src}
      widths={[480, 960]}
      sizes={`(max-width: 640px) 480px`}
      inferSize
      formats={['webp']}
      loading="lazy"
      class="md:w-1/2 mx-auto object-cover aspect-video mask-b-from-10% md:mask-x-from-40% md:mask-b-from-40%"
      alt={image.alt}
    />
  </div>

  <div class="flex flex-col gap-4 mt-32 md:mb-8">
    <h1 class="text-3xl md:text-5xl font-semibold font-serif text-shadow-sm text-shadow-black">
      {heading}
    </h1>
    { /* 
    <p class="text-sm max-w-[75ch]">
      {description}
    </p>
    */ }
  </div>

</header>
